{
  "name": "@tecworld/tail-tip",
  "version": "0.1.0",
  "description": "Tailwind/Flowbite-friendly TipTap editor wrapper (vanilla JS) with toolbar bindings.",
  "keywords": [
    "tiptap",
    "editor",
    "tailwind",
    "flowbite",
    "wysiwyg"
  ],
  "license": "MIT",
  "author": "Your Name",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arapchirchir/tail-tip.git"
  },
  "type": "module",
  "main": "./dist/tail-tip.cjs",
  "module": "./dist/tail-tip.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/tail-tip.mjs",
      "require": "./dist/tail-tip.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo \"(optional) add eslint later\"",
    "prepublishOnly": "npm run typecheck && npm run build"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.0.0",
    "@tiptap/starter-kit": "^2.0.0"
  },
  "dependencies": {
    "@tiptap/extension-bold": "^2.0.0",
    "@tiptap/extension-color": "^2.0.0",
    "@tiptap/extension-font-family": "^2.0.0",
    "@tiptap/extension-highlight": "^2.0.0",
    "@tiptap/extension-image": "^2.0.0",
    "@tiptap/extension-link": "^2.0.0",
    "@tiptap/extension-text-align": "^2.0.0",
    "@tiptap/extension-text-style": "^2.0.0",
    "@tiptap/extension-underline": "^2.0.0",
    "@tiptap/extension-youtube": "^2.0.0"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "vite": "^5.4.0"
  }
}
